.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  height: 207rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
._h1 {
  background: #e3fff7;
  display: flex;
  align-items: center;
  padding: 30rpx 50rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.form-1 {
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.13);
  border-radius: 20rpx;
  padding: 0 16rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.form-1 ._h2 {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e1e1e1;
  padding: 20rpx 0;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.form-1 ._h2 input {
  flex: 1;
  font-size: 24rpx;
}
.form-1 ._h2 ._p {
  width: 170rpx;
}
.form-1 ._h2 .photo-box {
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.form-1 ._h2 .photo-box image {
  width: 43rpx;
  height: 34rpx;
  margin-bottom: 10rpx;
}
.tips {
  display: flex;
  padding: 60rpx;
}
.tips ._p:first-child {
  width: 40rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #46c7a9;
}
.tips ._p:last-child {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999999;
}
.btn {
  height: 86rpx;
  width: 660rpx;
  margin: 0 auto;
  background-color: #46c7a9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
  border-radius: 20rpx;
}
