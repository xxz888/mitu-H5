.tab-box {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #999999;
  display: flex;
  align-items: center;
  font-weight: bolder;
}
.tab-box ._h1 {
  margin-right: 20rpx;
  padding: 10rpx 0;
}
.tab-box .active {
  color: #46c7a9;
  border-bottom: 5rpx solid #46c7a9;
}
.login-part {
  width: 600rpx;
  margin: 76rpx auto;
}
.login-part .input-box {
  height: 75rpx;
  align-items: center;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 12rpx 1rpx rgba(61, 46, 35, 0.1);
  border-radius: 10rpx;
  display: flex;
  margin-top: 50rpx;
}
.login-part .input-box image {
  width: 25rpx;
  margin: 0 22rpx;
}
.login-part .input-box input {
  font-size: 26rpx;
}
.pl {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: normal;
  color: #999999;
}
.code ._b {
  margin-left: auto;
  width: 220rpx;
  line-height: 100%;
  display: flex;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
  font-weight: normal;
  color: #46c7a9;
}
