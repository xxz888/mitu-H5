.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  height: 207rpx;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7CF9E;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid #D4C09D;
  border-left: 5rpx solid #D4C09D;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7CF9E;
  position: absolute;
  right: 0;
}
._h1 {
  font-size: 23rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  height: 70rpx;
  background: linear-gradient(269deg, #D79F65 0%, #FDD8AA 100%);
  display: flex;
  padding-left: 30rpx;
  align-items: center;
}
.form-box {
  background: #FFFFFF;
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.2);
  border-radius: 20rpx;
  width: 690rpx;
  margin: 60rpx auto;
  padding: 0 30rpx;
}
.form-box ._h2 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #e1e1e1;
}
.form-box ._h2 input {
  text-align: right;
  font-size: 24rpx;
}
.form-box ._h2 ._p:last-child {
  color: #888;
  font-size: 24rpx;
}
.code ._b {
  margin-left: auto;
  width: 180rpx;
  line-height: 100%;
  display: flex;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
  font-weight: normal;
  color: #DF8E40;
}
.code .prevent {
  pointer-events: none;
  color: #999 !important;
}
.btn {
  height: 86rpx;
  width: 660rpx;
  margin: 100rpx auto;
  background: linear-gradient(269deg, #D79F65 0%, #FDD8AA 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  border-radius: 20rpx;
}
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9;
}
.modal .modal-content {
  width: 690rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
  padding: 40rpx 0;
}
.modal .modal-content .modal-text {
  position: relative;
  z-index: 19;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal .modal-content .m-bg {
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.modal .modal-content .card-icon {
  width: 110rpx;
  margin-bottom: 10rpx;
}
.modal .modal-content ._a {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F4CA99;
  display: flex;
  margin-bottom: 10rpx;
}
.modal .modal-content ._p {
  font-size: 50rpx;
  font-family: DIN;
  font-weight: bold;
  color: #F4CA99;
  display: flex;
  margin-bottom: 20rpx;
}
.modal .modal-content ._b {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 30rpx;
  border-radius: 5rpx;
  background: #F4CA99;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #252527;
}
._h4 {
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  line-height: 36rpx;
}
._h4 ._b {
  font-size: 29rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FF9426;
}
._h4 ._p {
  font-size: 20rpx;
  font-family: PingFang SC;
  color: #888;
}

