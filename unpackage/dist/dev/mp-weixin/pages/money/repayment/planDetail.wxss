.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  height: 207rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7CF9E;
  position: absolute;
  right: 0;
}
.main-box {
  padding: 30rpx;
}
.main-box .card-part {
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.13);
  border-radius: 20rpx;
}
.main-box .card-detail {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.main-box .card-detail ._p {
  width: 50%;
  margin-top: 20rpx;
  font-size: 31rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.main-box .card-box {
  display: flex;
  position: relative;
  height: 159rpx;
  align-items: center;
  padding: 20rpx 40rpx;
}
.main-box .card-box .card-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.main-box .card-box .logo {
  width: 60rpx;
  height: 60rpx;
  margin-right: 33rpx;
}
.main-box .card-box ._h1 {
  flex: 1;
  color: white;
}
.main-box .card-box ._h1 ._b {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.main-box .card-box ._h1 ._b ._a {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.main-box .card-box ._h1 ._p {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.btn {
  height: 86rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  margin: 0 auto;
  background: linear-gradient(269deg, #D79F65 0%, #FDD8AA 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
._ul {
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.13);
  border-radius: 20rpx;
  margin-top: 20rpx;
  padding: 30rpx 0;
  height: 600rpx;
  overflow-y: scroll;
}
._ul ._li:first-child {
  margin-bottom: 40rpx;
}
._ul ._li {
  margin-bottom: 20rpx;
  display: flex;
}
._ul ._li ._b {
  font-size: 37rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  text-align: center;
}
._ul ._li ._b:nth-child(1) {
  flex: 4;
}
._ul ._li ._b:nth-child(2) {
  flex: 1;
}
._ul ._li ._b:nth-child(3) {
  flex: 2;
}
._ul ._li ._b:nth-child(4) {
  flex: 2;
}
._ul ._li ._p {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #888;
  text-align: center;
}
._ul ._li ._p:nth-child(1) {
  flex: 4;
}
._ul ._li ._p:nth-child(2) {
  flex: 1;
}
._ul ._li ._p:nth-child(3) {
  flex: 2;
}
._ul ._li ._p:nth-child(4) {
  flex: 2;
  color: #F9CB32;
