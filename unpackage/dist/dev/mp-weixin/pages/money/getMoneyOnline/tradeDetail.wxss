.bg-title {
  width: 100%;
  height: 300rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7CF9E;
  position: absolute;
  right: 0;
}
.modal-content {
  width: 690rpx;
  margin: 30rpx auto;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  overflow: hidden;
  padding: 20rpx 0;
  border: 5rpx solid #FFFFFF;
}
.modal-content .modal-text {
  position: relative;
  z-index: 19;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.modal-content .m-bg {
  position: absolute;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.modal-content .card-icon {
  width: 110rpx;
  margin-bottom: 10rpx;
}
.modal-content ._a {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F4CA99;
  display: flex;
  margin-bottom: 10rpx;
}
.modal-content ._p {
  font-size: 50rpx;
  font-family: DIN;
  font-weight: bold;
  color: #46c7a9;
  display: flex;
  margin-bottom: 20rpx;
}
.modal-content ._b {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5rpx 30rpx;
  border-radius: 5rpx;
  background: #F4CA99;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #252527;
}
._ul {
  padding: 20rpx 50rpx;
}
._ul ._li {
  border-bottom: 1rpx solid #e1e1e1;
  padding: 20rpx 0;
}
._ul ._li ._h1 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}
._ul ._li image {
  width: 30rpx;
  height: 30rpx;
  margin-left: auto;
  margin-right: 20rpx;
}
._ul ._li ._a {
  margin-left: auto;
}

