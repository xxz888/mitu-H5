.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  height: 207rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid #fff;
  border-left: 5rpx solid #fff;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  position: absolute;
  right: 0;
}
._ul {
  padding: 30rpx;
}
._ul ._li {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.13);
  border-radius: 20rpx;
  padding: 30rpx 30rpx 30rpx 50rpx;
}
._ul ._li image {
  width: 55rpx;
  margin-right: 30rpx;
}
._ul ._li .right-box {
  flex: 1;
}
._ul ._li .right-box ._h1 {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
._ul ._li .right-box ._h1 ._b {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  font-size: 24rpx;
}
._ul ._li .right-box ._h1 ._b text {
  color: #46c7a9;
}
._ul ._li .right-box ._h1 ._a {
  font-size: 24rpx;
  color: #02a715;
}

