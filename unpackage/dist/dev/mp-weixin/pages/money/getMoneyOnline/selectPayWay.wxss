.bg-title {
  width: 100%;
  height: 389rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  background-color: #46c7a9;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid #fff;
  border-left: 5rpx solid #fff;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  position: absolute;
  right: 0;
}
._h1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  padding: 50rpx 100rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
._h2 {
  padding: 80rpx  0 30rpx 30rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-top: 40rpx;
}
._ul {
  width: 690rpx;
  margin: 0 auto;
}
._li {
  margin-bottom: 20rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.13);
  border-radius: 20rpx;
  padding: 22rpx 28rpx;
  overflow: hidden;
  position: relative;
}
._li ._h3 {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
._li ._h3 image {
  margin-right: 30rpx;
  width: 60rpx;
}
._li ._h4 {
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #555;
}
._li ._h4 ._p {
  width: 50%;
  margin-top: 20rpx;
}
._li ._h5 {
  width: 133rpx;
  height: 56rpx;
  background: #e3fff7;
  opacity: 0.5;
  border-radius: 10rpx;
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #46c7a9;
}

