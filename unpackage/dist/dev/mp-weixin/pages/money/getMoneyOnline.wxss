.bg-title {
  width: 100%;
  height: 300rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  background-color: #46c7a9;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid #fff;
  border-left: 5rpx solid #fff;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
  position: absolute;
  right: 0;
}
.shadow-box {
  margin: 50rpx auto;
  width: 690rpx;
  height: 484rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 22rpx 2rpx rgba(67, 67, 67, 0.13);
  border-radius: 20rpx;
  padding: 21rpx 36rpx;
}
.shadow-box ._h1 {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.shadow-box ._h1 image {
  width: 60rpx;
  margin-right: 20rpx;
}
.shadow-box .money-box {
  background: #F6F6F4;
  border-radius: 11rpx;
  padding: 16rpx;
  margin: 20rpx 0;
  border-radius: 10rpx;
}
.shadow-box .money-box ._h2 {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e1e1e1;
  padding-bottom: 16rpx;
}
.shadow-box .money-box ._h2 ._p {
  font-size: 60rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-right: 20rpx;
}
.shadow-box .money-box ._h2 input {
  flex: 1;
  font-size: 45rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.money-tips {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.money-tips ._h3 {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #46c7a9;
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  position: relative;
}
.money-tips ._h3:nth-child(2)::after {
  content: '';
  width: 1rpx;
  height: 20rpx;
  background: #BFBFBF;
  position: absolute;
  left: 0;
}
.money-tips ._h3:nth-child(2)::before {
  content: '';
  width: 1rpx;
  height: 20rpx;
  background: #BFBFBF;
  position: absolute;
  right: 0;
}
._h4 {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
._h4 ._b {
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
._h4 image {
  width: 40rpx;
  margin: 0 20rpx;
}
._h4 ._p {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
._h4 ._p:nth-child(4) {
  margin-left: auto;
  font-size: 23rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
._h4 ._a {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-top: 5rpx solid #999999;
  border-right: 5rpx solid #999999;
  width: 13rpx;
  height: 13rpx;
}
.keyboard {
  width: 100%;
  height: 467rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #E5E5E5;
}
.keyboard ._p,
.keyboard ._b,
.keyboard ._a,
.keyboard .del,
.keyboard .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
}
.keyboard ._p,
.keyboard ._b,
.keyboard ._a {
  width: 185rpx;
  height: 119rpx;
  border-right: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
  font-size: 48rpx;
  font-family: DIN;
  font-weight: bold;
  color: #333333;
}
.keyboard ._p:nth-child(1) {
  bottom: 0;
  left: 184rpx;
}
.keyboard ._p:nth-child(2) {
  top: 0;
  left: 0;
}
.keyboard ._p:nth-child(3) {
  top: 0;
  left: 184rpx;
}
.keyboard ._p:nth-child(4) {
  top: 0;
  left: calc(184rpx * 2);
}
.keyboard ._p:nth-child(5) {
  top: 119rpx;
  left: 0;
}
.keyboard ._p:nth-child(6) {
  top: 119rpx;
  left: 184rpx;
}
.keyboard ._p:nth-child(7) {
  top: 119rpx;
  left: calc(184rpx * 2);
}
.keyboard ._p:nth-child(8) {
  top: calc(119rpx * 2);
  left: 0;
}
.keyboard ._p:nth-child(9) {
  top: calc(119rpx * 2);
  left: 184rpx;
}
.keyboard ._p:nth-child(10) {
  top: calc(119rpx * 2);
  left: calc(184rpx * 2);
}
.keyboard ._b {
  font-size: 30rpx !important;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  bottom: 0;
}
.keyboard ._a {
  left: calc(184rpx * 2);
  bottom: 0;
}
.keyboard .del {
  width: 199rpx;
  right: 0;
  top: 0;
  height: 120rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.keyboard .btn {
  right: 0;
  bottom: 0;
  height: 347rpx;
  background: linear-gradient(225deg, #46c7a9 0%, #e3fff7 100%);
  font-size: 30rpx;
  width: 199rpx;
  font-weight: bold;
}

