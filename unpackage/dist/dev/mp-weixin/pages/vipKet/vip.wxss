.bg-title {
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._a {
  position: absolute;
  font-size: 22rpx;
  right: 0;
  color: white;
}
.header .header-title-common ._b {
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.card-box {
  width: 100%;
  height: 200rpx;
  position: relative;
  padding: 40rpx 60rpx 70rpx;
  display: flex;
  align-items: center;
  margin-bottom: 200rpx;
  background-color: #46c7a9;
}
.card-box .bg {
  width: 620rpx;
  height: 364rpx;
  position: absolute;
  left: 50%;
  margin-left: -310rpx;
  bottom: -182rpx;
  z-index: 2;
}
.card-box .info {
  position: absolute;
  z-index: 3;
  width: 60%;
  display: flex;
  left: 20%;
  padding-top: 160rpx;
}
.card-box .info .icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.card-box .info ._p {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 80rpx;
  color: white;
}
.card-box .info ._b {
  margin-left: auto;
  height: 51rpx;
  background: #BC7631;
  border-radius: 20rpx;
  color: white;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.main-box {
  min-height: 80vh;
  padding: 40rpx;
}
.main-box ._h1 {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
}
.main-box ._h1 ._p {
  position: relative;
}
.main-box ._h1 ._p::after {
  content: '';
  width: 100%;
  height: 3rpx;
  display: block;
  position: absolute;
  top: 20rpx;
  left: 170rpx;
  background-color: #312417;
}
.main-box ._h1 ._a {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.main-box .pay-box {
  display: flex;
  align-items: center;
  width: 550rpx;
  margin: 70rpx auto 30rpx;
  justify-content: space-between;
}
.main-box .pay-box ._h2 {
  width: 640rpx;
  height: 166rpx;
  border-radius: 20px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.main-box .pay-box ._h2 ._p {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
}
.main-box input {
  border: 3rpx solid #F2EECF;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #F2EECF;
  padding: 0 40rpx;
  width: 550rpx;
  height: 70rpx;
  border-radius: 10rpx;
}
.main-box ._h3 {
  height: 86rpx;
  width: 550rpx;
  margin: 0 auto;
  background-color: #46c7a9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
  border-radius: 20rpx;
}
.main-box ._h4 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}
.main-box .tips {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  margin-left: 65rpx;
  width: 550rpx;
  height: 200rpx;
}
.main-box .tips ._p {
  margin-bottom: 10rpx;
}

