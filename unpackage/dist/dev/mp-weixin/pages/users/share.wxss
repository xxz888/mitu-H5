.canvas {
  position: absolute;
  left: 99999px;
}
view {
  box-sizing: border-box;
}
.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 5vw;
  overflow: hidden;
  min-height: 100vh;
  background-color: #46c7a9;
}
.header {
  width: 100%;
  position: relative;
  height: 140rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
  margin-top: 50rpx;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
image {
  display: flex;
  flex-shrink: 0;
}
.btn-box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 150rpx;
  color: #46c7a9;
}
.btn-box ._p {
  background-color: white;
  width: 600rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 20rpx;
  font-size: 42rpx;
  color: #222;
}
@keyframes blink {
0% {
    opacity: 1;
}
50% {
    opacity: 0.5;
}
50.01% {
    opacity: 0;
}
100% {
    opacity: 0;
}
}
/* 添加兼容性前缀 */
@-webkit-keyframes blink {
0% {
    opacity: 1;
}
50% {
    opacity: 0.5;
}
50.01% {
    opacity: 0;
}
100% {
    opacity: 0;
}
}
/* 定义blink类*/
.blink {
  animation: blink 1s linear infinite;
  /* 其它浏览器兼容性前缀 */
  -webkit-animation: blink 1s linear infinite;
  -moz-animation: blink 1s linear infinite;
  -ms-animation: blink 1s linear infinite;
  -o-animation: blink 1s linear infinite;
  color: #fff;
  text-align: center;
}

