.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.moreShow {
  margin-top: 20rpx;
  border-top: 1rpx solid #808080;
}
.moreShow .showImg {
  display: flex;
}
.moreShow image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.downImg {
  display: flex;
}
.downImg .downImg-v1 {
  display: flex;
  width: 320rpx;
  height: 60rpx;
  align-items: center;
}
.downImg .downImg-v2 {
  width: 150rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  border-radius: 20rpx;
  border: 1rpx solid #F7CF9E;
  height: 60rpx;
  align-items: center;
}
.showmore {
  display: flex;
  align-items: center;
  margin-left: 580rpx;
}
.showmore .showmore-v1 {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid #909090;
  border-right: 5rpx solid #909090;
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.showmore .showmore-v2 {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-top: 5rpx solid #909090;
  border-left: 5rpx solid #909090;
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}
.textareas {
  display: flex;
  justify-content: center;
  width: 690rpx;
  padding: 20rpx;
  font-size: 24rpx;
}
.source {
  margin-bottom: 20rpx;
}
.source scroll-view {
  height: 70vh;
  width: 690rpx;
  margin-left: 30rpx;
}
.title-head {
  width: 750rpx;
  height: 160rpx;
  font-size: 24rpx;
  padding: 20rpx;
  z-index: 1;
  background-color: #FFFFFF;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  height: 204rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}

