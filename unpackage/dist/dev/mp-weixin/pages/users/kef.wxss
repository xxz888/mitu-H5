.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  height: 150rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.safe-box {
  position: relative;
  height: 231rpx;
  margin-bottom: 100rpx;
}
.safe-box .bg {
  width: 100%;
  height: 100%;
  background-color: #46c7a9;
}
.safe-box .user-box {
  display: flex;
  height: 140rpx;
  align-items: center;
  padding: 0 24rpx;
  position: absolute;
  width: 690rpx;
  bottom: -70rpx;
  left: 30rpx;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 10rpx 0px rgba(51, 51, 51, 0.3);
  border-radius: 20rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #46c7a9;
}
.safe-box .user-box ._a {
  padding: 4rpx 10rpx;
  background: #46c7a9;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FEFEFE;
}
.safe-box .user-box image {
  width: 88rpx;
  height: 88rpx;
  margin-right: 26rpx;
  border-radius: 50%;
}
.safe-box .user-box ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  margin-left: auto;
}
._ul {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 30rpx;
}
._ul ._li {
  width: 49%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #FFFFFF;
  box-shadow: 0px 8rpx 10rpx 0px rgba(51, 51, 51, 0.3);
  border-radius: 10rpx;
  padding-top: 33rpx;
  padding-bottom: 20rpx;
}
._ul ._li image {
  width: 58rpx;
  margin-bottom: 12rpx;
}
._ul ._li ._h1 {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}
._ul ._li ._p {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  margin-bottom: 10rpx;
}
