}
.header .header-title-common ._p:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7CF9E;
  position: absolute;
  right: 0;
}
.header .income-options {
  display: flex;
  margin-top: 20rpx;
  margin-left: 10%;
  justify-content: space-between;
  color: #F7CF9E;
  height: 150rpx;
  width: 80%;
}
.header .income-options ._h4 {
  display: flex;
  flex-direction: column;
  align-items: center;
}
