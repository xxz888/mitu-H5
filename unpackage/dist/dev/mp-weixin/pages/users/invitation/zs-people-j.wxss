.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  height: 204rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #fff;
}
.header .header-title-common ._p {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid #fff;
  border-left: 5rpx solid #fff;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.main-box {
  padding: 30rpx;
}
.main-box .search-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.main-box .search-content .search-box {
  height: 60rpx;
  flex: 1;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 6rpx 0rpx rgba(28, 28, 28, 0.2);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.main-box .search-content .search-box image {
  width: 27rpx;
  margin: 0 20rpx;
}
.main-box .search-content .search-box input {
  font-size: 24rpx;
  flex: 1;
}
.main-box .search-content .search-box ._p {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #46c7a9;
  padding-right: 30rpx;
}
.main-box .search-content .select-box {
  padding: 0 40rpx;
  margin-left: 20rpx;
  height: 60rpx;
  background: #FFFFFF;
  box-shadow: 0px 4rpx 6rpx 0rpx rgba(28, 28, 28, 0.2);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.main-box .search-content .select-box image {
  width: 27rpx;
  margin-left: 10rpx;
}
.main-box ._ul ._li {
  background: #FFFFFF;
  box-shadow: 0px 4rpx 6rpx 0px rgba(28, 28, 28, 0.3);
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 10rpx;
}
.main-box ._ul ._li .data-box {
  display: flex;
  background: #F9F9F9;
  border-radius: 10px;
  flex-wrap: wrap;
  padding: 0 20rpx 20rpx 20rpx;
  margin-top: 20rpx;
}
.main-box ._ul ._li .data-box ._p {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin-top: 20rpx;
  width: 50%;
}
.main-box ._ul ._li .data-box ._p text {
  font-size: 24rpx;
  color: #46c7a9;
}
.main-box ._ul ._li .user-box {
  display: flex;
  align-items: center;
}
.main-box ._ul ._li .user-box image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.main-box ._ul ._li .user-box .right-box {
  flex: 1;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.main-box ._ul ._li .user-box .right-box image {
  width: 40rpx;
  margin-right: 0rpx;
  margin-left: 10rpx;
}
.main-box ._ul ._li .user-box .right-box ._h1 {
  display: flex;
  justify-content: space-between;
}
.main-box ._ul ._li .user-box .right-box ._h1 ._p {
  display: flex;
  align-items: center;
}
.main-box ._ul ._li .user-box .right-box ._h1 ._p text {
  background: #EEEEEE;
  border-radius: 10rpx;
  display: flex;
  font-size: 24rpx;
  padding: 0 20rpx;
  margin-left: 10rpx;
}
.main-box ._ul ._li .user-box .right-box ._h1 ._a {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
.empty {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100vh;
  padding-top: 600rpx;
  margin-left: 275rpx;
  top: 0;
  left: 0;
  align-items: center;
  justify-content: center;
}
.empty image {
  width: 200rpx;
}
.empty .tits {
  width: 200rpx;
  color: #C0C0C0;
  display: flex;
  justify-content: center;
}

