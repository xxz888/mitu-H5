.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  height: 277rpx;
  background-color: #46c7a9;
}
.header .header-title-common {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  position: relative;
}
.header .header-title-common ._b {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header .header-title-common ._p:first-child {
  -webkit-transform: rotate(45deg);
          transform: rotate(45deg);
  border-bottom: 5rpx solid white;
  border-left: 5rpx solid white;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
}
.header .header-title-common ._p:last-child {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #F7CF9E;
  position: absolute;
  right: 0;
}
.header .income-options {
  display: flex;
  margin-top: 10rpx;
  margin-left: 10%;
  justify-content: space-between;
  color: #46c7a9;
  height: 150rpx;
  width: 80%;
}
.header .income-options picker {
  margin-top: 40rpx;
}
.header .income-options ._h4 {
  display: flex;
  align-items: center;
}
.header .income-options ._h4 ._p {
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
  width: 110rpx;
}
.header .income-options ._h4 view {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
  display: flex;
  justify-content: center;
}

