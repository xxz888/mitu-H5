.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  height: 409rpx;
  background-color: #46c7a9;
}
.header ._h1 {
  padding-top: 10rpx;
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
}
.header ._h2 {
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}
.header ._h2 image {
  width: 25rpx;
}
.header ._h3 {
  font-size: 50rpx;
  font-family: DIN;
  font-weight: 500;
  color: white;
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}
.header .income-options {
  display: flex;
  justify-content: space-between;
  font-size: 38rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}
.header .income-options ._h4 {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}
.header .income-options ._h4 ._p {
  margin-top: 10rpx;
  position: relative;
  display: flex;
  justify-content: center;
}
.header .income-options ._h4 text {
  position: absolute;
  top: -25rpx;
  width: 70rpx;
  text-align: center;
  background: white;
  border-radius: 5rpx;
  font-size: 28rpx;
  -webkit-transform: scale(0.7);
          transform: scale(0.7);
  font-family: PingFang SC;
  font-weight: bold;
  color: #46c7a9;
  padding-top: 5rpx;
}
.tab-box {
  display: flex;
  align-items: center;
  padding: 38rpx 38rpx 0;
}
.tab-box ._h1 {
  margin-right: 30rpx;
  padding-bottom: 5rpx;
}
.tab-box .active {
  border-bottom: 3rpx solid #46c7a9;
}
._ul {
  height: 620rpx;
}
._ul ._li {
  padding: 20rpx 35rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #e1e1e1;
}
._ul ._li ._p {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}
._ul ._li ._h5 {
  display: flex;
  flex-direction: column;
  align-items: center;
}
._ul ._li ._h5 ._p:last-child {
  font-size: 30rpx;
  font-family: DIN;
  font-weight: 500;
  color: #46c7a9;
  margin-top: 10rpx;
}
._ul ._li ._h6 {
  display: flex;
  flex-direction: column;
  align-items: center;
}
._ul ._li ._h6 ._p:last-child {
  font-size: 24rpx;
  font-family: DIN;
  font-weight: 500;
  color: #333333;
  margin-top: 10rpx;
}

