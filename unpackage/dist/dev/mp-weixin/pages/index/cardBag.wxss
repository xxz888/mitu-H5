.bg-title {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.header {
  width: 100%;
  position: relative;
  padding: 30rpx;
  padding-top: calc(25px + 30rpx);
  min-height: 100rpx;
  background-color: #46c7a9;
}
.header ._h1 {
  display: flex;
  justify-content: center;
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
  margin: 30rpx 0 60rpx 0;
}
.header ._h2 {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 78rpx;
  margin: 0 auto;
  border: 1rpx solid white;
  border-radius: 15rpx;
  overflow: hidden;
}
.header ._h2 ._p {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 78rpx;
  background-color: none;
  color: white;
  font-weight: bold !important;
  font-size: 27rpx !important;
  font-family: PingFang SC !important;
}
.header ._h2 .active {
  background: white !important;
  color: black;
}
